gem "devise_invitable", "~> 0.6.0", :group => :development
gem "annotate", "~> 2.5.0", :group => :development
gem "countries", "~> 0.8.2", :group => :development
gem "country_select", "~> 0.0.2", :group => :development
gem "jquery-rails", "~> 1.0.12", :group => :development
gem "paperclip", "~> 2.4.3", :group => :development

group :development do
	gem 'rspec-rails'
	gem "devise", "~> 1.5.3"
	gem "devise_invitable", "~> 0.6.0"
	gem 'annotate', "~> 2.5.0"
	gem 'countries', "~> 0.8.2"
	gem 'country_select', "~> 0.0.2"
	gem 'jquery-rails', "~> 1.0.12"
	gem 'paperclip', "~> 2.4.3"
end


group :test do
	gem 'rspec'
	gem 'spork'
	gem 'factory_girl_rails'
end

group :production do
	gem 'thin'
	gem "devise", "~> 1.5.3"
	gem "devise_invitable", "~> 0.6.0"
	gem "paperclip", "~> 2.4.3"
end

