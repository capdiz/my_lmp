<h1>Sign in</h1><br />
<div class="signin">
	<%= form_for(:session, :url => session_path(resource_name)) do |f| %>
		<table border="0" cellpadding="1" cellspacing="1" width="260">	
			<tr>
				<td>
					<div class="field">
						<%= f.label :email, "Email: " %>
					</div>
				</td>
				<td>
					<div class="field">
						<%= f.text_field :email, :size => "25" %>
					</div>
					
				</td>
			</tr>
			<tr>
				<td>
					<div class="field">
						<%= f.label :password, "Password: " %>
					</div>
				</td>
				<td>    
					<div class="field">
						<%= f.password_field :password, :size => "25" %>
					</div>
				</td>
			</tr>
			<tr>
				<td align="center" colspan="3">
					<div class="field">
					<label for="remember_me" :class ="checkbox">Remember me</label>
						<%= check_box_tag :remember_me, '1', true, :class => "checkbox" %>
					</div>
				</td>
			</tr>

			<tr>
				<td align="center" colspan="3">
					<div class="actions">
						<%= f.submit 'Sign in' %>
					</div>
				</td>
			</tr>
			<tr>
				<td align="center" colspan="3">
					<div class="field">
						<%= link_to "Forgot your password?", "#" %>
					</div>
				</td>
			</tr>
		</table>
	<% end %>
<div class="nav">Like to join? <%= link_to "Sign up now!", root_path %></div>
</div>
