<h1>Sign in</h1><br/>
<div class="signin">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<table border="0", cellpadding="1" cellspacing="1" width="260">
			<tr>
				<td>
					<div class="field"><%= f.label :email, "Email: " %>
					</div>
				</td>
				<td>
					<div class="field">
						<%= f.email_field :email, :size => "20" %>
					</div>
				</td>
			</tr>
			<tr>
				<td>
					<div class="field">
						<%= f.label :password, "Password:" %>
					</div>
				</td>
				<td>
					<div class="field">
						<%= f.password_field :password, :size => "20" %>
					</div>
				</td>
			</tr>
			<tr>
				<td align="center" colspan="3">
					<div class="field">
						<% if devise_mapping.rememberable? -%>
							<%= f.check_box :remember_me %> 
							<%= f.label :remember_me %>
						<% end -%>
					</div>
				</td>
			</tr>
			<tr>
				<td align="center" colspan="3">
					<div class="field">
						<%= f.submit "Sign in" %>
					</div>
				</td>
			</tr>
		</table>
	<% end %>
<%= render :partial => "devise/shared/links" %>
</div>

