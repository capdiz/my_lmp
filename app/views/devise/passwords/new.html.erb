<h1>Forgot your password?</h1>
<div id="content">
	<p class="details">Enter your email address below in order to recieve instructions on how retrieve your passsword</p>
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		<table border="0" cellspacing="2" cellpadding="1" width="230">
			<tr>
	  			<td>
	  				<div class="field">
		  				<%= f.label :email, "Email:" %>
			  		</div>
	  			</td>
	  			<td>
		  			<div class="field">
			  			<%= f.email_field :email, :size => "25" %>
				    	</div>
	  			</td>
		  		<td>
			  		<div class="field">
				  		<%= f.submit "Send" %>
	  				</div>
	  			</td>
	  		</tr>
	  	</table>
	<% end %>
<%= render 'shared/error_messages' %>
<%= render :partial => "devise/shared/links" %>
</div>



